{
  "name": "exness",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "setup-db": "bun run setup-db.ts",
    "start:engine": "cd apps/engine && bun run index.ts",
    "start:http-server": "cd apps/http-server && bun run index.ts",
    "start:price-poller": "cd apps/price_poller && bun run index.ts",
    "start:all": "concurrently \"npm run start:engine\" \"npm run start:http-server\" \"npm run start:price-poller\"",
    "db:studio": "docker run --rm -p 8080:8080 -e ADMINER_DEFAULT_SERVER=host.docker.internal adminer"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
