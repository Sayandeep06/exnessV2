{
  "name": "exness",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "setup-db": "bun run setup-db.ts",
    "start:engine": "cd apps/engine && bun run index.ts",
    "start:http-server": "cd apps/http-server && bun run index.ts",
    "start:websocket": "cd apps/websocket && bun run index.ts",
    "start:price-poller": "cd apps/price_poller && bun run index.ts",
    "start:web": "cd apps/web && bun run dev",
    "start:all": "concurrently \"bun run start:engine\" \"bun run start:http-server\" \"bun run start:websocket\" \"bun run start:price-poller\" \"bun run start:web\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "uuid": "^12.0.0"
  }
}
